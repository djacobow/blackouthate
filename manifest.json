{
    "manifest_version":2,
    "name":"Black Out Hate",
    "short_name":"Black Out Hate",
    "description":"Blacks out the names of infamous hate criminals and religious terrorists.",
    "author":"Dave Jacobowitz",
    "options_ui":{
        "page":"options.html",
        "chrome_style":true
    },
    "version":"1.0.5",
    "permissions":[
        "storage",
        "activeTab"
    ],
    "browser_action":{
        "default_icon":{
            "128":"icons/black-128.png"
        },
        "default_title":"Configure Black Out Hate",
        "default_popup":"options.html"
    },
    "content_scripts":[
        {
            "matches":[
                "http://*/*",
                "https://*/*"
            ],
            "js":[
                "defaults.js",
                "shared.js",
                "timers.js",
                "text_changer.js",
                "image_changer.js",
                "top.js"
            ],
            "run_at":"document_end"
        }
    ],
    "icons":{
        "128":"icons/black-128.png",
        "200":"icons/black-200.png",
        "400":"icons/black-400.png"
    },
    "web_accessible_resources":[
        "empty_image.png",
        "icons/black-400.png"
    ]
}
